﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment__2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Web Application</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="School">School</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Web Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            - <a asp-area="" asp-controller="Home" asp-action="School">School</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>

    .display-4 {
        text-shadow: 3px 3px #B8B8B8;
    }

    .name {
        font-size: 2rem;
        font-family: Cambria;
        
    }
    .name span {
        font-size: 2rem;
        font-family: 'Arial Rounded MT';
        text-shadow: 3px 3px #B8B8B8;
    }

    .course {
        font-size: 2rem;
        font-family: Cambria;
    }

    .course span {
        font-size: 2rem;
        font-family: 'Arial Rounded MT';
        text-shadow: 3px 3px #B8B8B8;
    }

    .section {
        font-size: 2rem;
        font-family: Cambria;
    }

    .section span {
        font-size: 2rem;
        font-family: 'Arial Rounded MT';
        text-shadow: 3px 3px #B8B8B8;
    }


    table {
        font-family: 'Arial Rounded MT';
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    td {
        border: 1px solid #000000;
        padding: 20px;
        text-align: center;
    }

    th {
        border: 1px solid #000000;
        padding: 5px;
        text-align: center;
        font-family: 'Arial Rounded MT';
    }

    .head1 {
        font-size: 5rem;
        font-family: 'Arial Rounded MT';
        text-shadow: 3px 3px #B8B8B8
    }

</style>